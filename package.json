{
  "name": "puck-monorepo",
  "private": true,
  "scripts": {
    "dev:api": "bun --filter @puck/api dev",
    "dev:web": "bun --filter @puck/web dev",
    "test:api": "bun --filter @puck/api test",
    "test:web": "bun --filter @puck/web test",
    "lint:format": "prettier --write ./**/*.{ts,json,vue,html}",
    "lint:code-style": "prettier --check ./**/*.{ts,json,vue,html}",
    "lint:web": "bun --filter @puck/web type-check",
    "lint:api": "bun --filter @puck/api lint",
    "lint": "bun run lint:code-style && bun run lint:api && bun run lint:web"
  },
  "workspaces": [
    "apps/*"
  ],
  "dependencies": {},
  "devDependencies": {
    "bun-types": "latest",
    "prettier": "3.8.0",
    "prettier-plugin-tailwindcss": "^0.7.2"
  }
}
