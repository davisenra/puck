{
  "name": "puck-monorepo",
  "private": true,
  "scripts": {
    "dev:api": "bun --filter @puck/api dev",
    "dev:web": "bun --filter @puck/web dev",
    "test:api": "bun --filter @puck/api test",
    "test:web": "bun --filter @puck/web test",
    "test": "bun run test:api && bun run test:web",
    "lint:format": "prettier --write ./**/*.{ts,json,vue,html,md}",
    "lint:code-style": "prettier --check ./**/*.{ts,json,vue,html}",
    "lint:web": "bun --filter @puck/web type-check",
    "lint:api": "bun --filter @puck/api lint",
    "lint": "bun run lint:code-style && bun run lint:api && bun run lint:web",
    "build": "bun run build:web && bun run build:api && cp -r packages/web/dist packages/api/public",
    "build:web": "bun --filter @puck/web build",
    "build:api": "bun --filter @puck/api build"
  },
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {},
  "devDependencies": {
    "bun-types": "latest",
    "prettier": "3.8.0",
    "prettier-plugin-tailwindcss": "^0.7.2"
  }
}
